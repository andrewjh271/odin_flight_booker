<h3><%= pluralize(flights.length, 'flight') %> matched your search.</h3>

<% if flights.any? %>
  <table>
    <thead>
      <tr>
        <th>Flight #</th>
        <th>Departs</th>
        <th>Arrives</th>
        <th>Date</th>
        <th>Time</th>
        <th>Duration</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @flights.includes(:origin, :destination).each do |flight| %>
        <tr>
          <td><%= flight.id %></td>
          <td><%= flight.origin.code %></td>
          <td><%= flight.destination.code %></td>
          <td><%= flight.formatted_date %></td>
          <td><%= flight.formatted_time %></td>
          <td><%= flight.duration %></td>
          <td><%= link_to 'Show', root_path %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>