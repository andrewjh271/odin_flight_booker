<% if flights %>

<h3><%= pluralize(flights.length, 'flight') %> matched your search.</h3>

  <table>
    <thead>
      <tr>
        <th>Flight #</th>
        <th>Departs</th>
        <th>Arrives</th>
        <th>Date</th>
        <th>Time</th>
        <th>Duration</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% flights.each do |flight| %>
        <tr>
          <td><%= flight.id %></td>
          <td><%= flight.origin.code %></td>
          <td><%= flight.destination.code %></td>
          <td><%= flight.formatted_date %></td>
          <td><%= flight.formatted_time %></td>
          <td><%= flight.duration %></td>
          <td>
            <%= button_to 'Book Flight',
                new_booking_path,
                method: :get,
                params: { flight_id: flight.id, tickets: params[:flight][:tickets] } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>